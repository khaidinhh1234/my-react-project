    <main class="container">
      <div class="row">
          <div class="col-md-6 p-4 p-md-5 mb-4 rounded text-body-emphasis bg-body-secondary">
              <h1 class="display-4 fst-italic">Chào mừng bạn ghé thăm Website</h1>
              <p class="lead my-3">
                  <% if (kingday == "Chủ Nhật" ) { %>
                      <h4>Hôm nay là Cuối tuần</h4>
                  <% } else { %>
                      <h2>Hôm nay là <%= kingday %></h2>
                  <% } %>
