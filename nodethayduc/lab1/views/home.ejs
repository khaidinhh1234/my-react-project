    <main>

      <section class="py-5 text-center container">
            <h1 class="fw-light">Products New</h1>
      </section>
      <div class="album py-5 bg-body-tertiary">
        <div class="container">
          <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
            <% for (let product of product2) { %>
            <div class="col">
              <div class="card shadow-sm">
                <img src="img/<%= product.imageURL %>" width="100%" alt="A Book">
                <div class="card-body">
                  <p class="card-text"><h4><%= product.title %></h4></p>
                  <p class="card-text"><%= product.description %></p>
                  
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <button type="button" class="btn btn-sm btn-outline-secondary">See Details</button>
                      <button type="button" class="btn btn-sm btn-outline-secondary">Buy Now</button>
                    </div>
                    <small class="text-body-secondary"><%= product.price %>VND</small>
                  </div>
                </div>
            </div>
          </div>
          <% } %>
          </div>
        </div>
         
        
      </div>
    
    </main>
    
         
   
